@model Escooters.Models.Maintenance
@{
    ViewData["Title"] = "Maintenance Request";
    Layout = "_Layout";
}

<section class="section-padding bg-dark text-white">
    <div class="container">
        <div class="bg-secondary bg-opacity-25 p-5 rounded shadow">
            <h3 class="mb-4 text-info text-center">🚧 Maintenance Request</h3>

            <form asp-action="Create" method="post" id="maintenanceForm">
                <div class="mb-3">
                    <label class="form-label">🔧 Bike Name</label>
                    <input asp-for="BikeName" class="form-control form-control-lg" placeholder="Enter bike name..." required />
                </div>
                <div class="mb-3">
                    <label class="form-label">🏍️ Bike Type</label>
                    <input asp-for="BikeType" class="form-control form-control-lg" placeholder="e.g. Sport, Cruiser..." required />
                </div>
                <div class="mb-3">
                    <label class="form-label">📝 Issue Description</label>
                    <textarea asp-for="IssueDescription" class="form-control form-control-lg" rows="4" placeholder="Describe the problem..." required></textarea>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Submit Request</button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["Success"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Request Received',
                text: '@TempData["Success"]',
                confirmButtonColor: '#3085d6'
            });
        </script>
    }
}
