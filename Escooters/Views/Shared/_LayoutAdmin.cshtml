<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @RenderSection("Scripts", required: false)

    <style>
        body {
            background-color: #121212;
            color: white;
        }

        .sidebar {
            height: 100vh;
            background-color: #1f1f1f;
            padding: 1rem;
        }

            .sidebar a {
                color: #ccc;
                display: block;
                padding: 10px;
                text-decoration: none;
                border-radius: 5px;
            }

                .sidebar a:hover {
                    background-color: #333;
                    color: white;
                }

        .content {
            padding: 2rem;
        }

        .card-dashboard {
            background-color: #1f1f1f;
            color: white;
            border: none;
            border-radius: 10px;
        }

            .card-dashboard h5 {
                font-size: 1.25rem;
            }

            .card-dashboard .count {
                font-size: 2rem;
                font-weight: bold;
            }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar col-md-2">
            <h4 class="text-white mb-4">Admin Panel</h4>
            <a asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
            <a asp-controller="Admin" asp-action="Users">Manage Users</a>
            <a asp-controller="Admin" asp-action="ContactMessages">Contact Messages</a>
            <a asp-controller="Admin" asp-action="Bikes">Manage Bikes</a>
            <a asp-controller="Admin" asp-action="Services">Manage Services</a>
            <a asp-controller="Admin" asp-action="Bookings">View Bookings</a>
            <a asp-controller="Admin" asp-action="Payments">View Payments</a>
            <a class="nav-link" asp-action="MaintenanceRequests" asp-controller="Admin">Maintenance</a>

            <a asp-controller="Account" asp-action="Logout">Logout</a>

        </div>

        <!-- Main Content -->
        <div class="content col-md-10">
            @RenderBody()
        </div>
    </div>
</body>
</html>
