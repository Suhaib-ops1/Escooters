@model List<Escooters.Models.Booking>
@{
    ViewData["Title"] = "My Bookings";
}

<section class="section-padding bg-dark text-white">
    <div class="container">
        <h3 class="mb-4">My Bookings</h3>

        @if (Model.Count == 0)
        {
            <div class="alert alert-info">You have no bookings yet.</div>
        }
        else
        {
            <table class="table table-bordered table-striped table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Bike</th>
                        <th>Pickup</th>
                        <th>Return</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Payment</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.BookingId</td>
                            <td>@booking.Bike.Name</td>
                            <td>@booking.PickupDate.ToShortDateString()</td>
                            <td>@booking.ReturnDate.ToShortDateString()</td>
                            <td>@booking.TotalCost.ToString("0.00") JOD</td>
                            <td>
                                <span class="badge bg-@(booking.Status == "Confirmed" ? "success" : "warning")">@booking.Status</span>
                            </td>
                            <td>
                                @if (booking.Payments.Any())
                                {
                                    <a asp-action="DownloadInvoice" asp-route-bookingId="@booking.BookingId" class="btn btn-sm btn-success">
                                        Download Invoice
                                    </a>
                                }
                                else
                                {
                                    <div class="d-flex gap-2">
                                        <a asp-action="Payment" asp-route-bookingId="@booking.BookingId" class="btn btn-sm btn-light">Pay Now</a>
                                        <form asp-action="CancelBooking" asp-route-id="@booking.BookingId" method="post"
                                              onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                            <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                                        </form>
                                    </div>
                                }
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</section>
