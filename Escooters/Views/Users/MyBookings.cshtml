@model List<Escooters.Models.Booking>
@{
    ViewData["Title"] = "My Bookings";
}

<section class="section-padding bg-dark text-white">
    <div class="container">
        <h3 class="mb-4">My Bookings</h3>

        @if (Model.Count == 0)
        {
            <div class="alert alert-info">You have no bookings yet.</div>
        }
        else
        {
            <table class="table table-bordered table-striped table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Bike</th>
                        <th>Pickup</th>
                        <th>Return</th>
                        <th>Total</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.BookingId</td>
                            <td>@booking.Bike.Name</td>
                            <td>@booking.PickupDate.ToShortDateString()</td>
                            <td>@booking.ReturnDate.ToShortDateString()</td>
                            <td>@booking.TotalCost.ToString("0.00") JOD</td>
                            <td>
                                <span class="badge bg-@(booking.Status == "Confirmed" ? "success" : "warning")">@booking.Status</span>
                            </td>
                           

                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</section>
