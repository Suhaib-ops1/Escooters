@model Escooters.Models.Service
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Edit Service";
}

<h2 class="mb-4">Edit Service</h2>

<form asp-action="EditService" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ServiceId" />
    <div class="mb-3">
        <label>Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label>Change Icon (optional)</label>
        <input type="file" name="IconFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.IconUrl))
        {
            <div class="mt-2">
                <img src="@Model.IconUrl" width="60" />
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Services" class="btn btn-link">Back</a>
</form>
