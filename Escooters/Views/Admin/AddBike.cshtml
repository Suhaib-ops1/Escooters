@model Escooters.Models.Bike
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Add Bike";
}

<h2 class="mb-4">Add New Bike</h2>

<form asp-action="AddBike" asp-controller="Admin" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Type</label>
        <input asp-for="Type" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label>Price Per Day</label>
        <input asp-for="PricePerDay" class="form-control" type="number" step="0.01" required />
    </div>
    <div class="mb-3">
        <label>Status</label>
        <select asp-for="Status" class="form-control">
            <option>Available</option>
            <option>Rented</option>
            <option>Maintenance</option>
        </select>
    </div>
    <div class="mb-3">
        <label>Upload Image</label>
        <input type="file" name="ImageFile" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Bike</button>
    <a asp-action="Bikes" class="btn btn-link">Back to Bikes</a>
</form>
