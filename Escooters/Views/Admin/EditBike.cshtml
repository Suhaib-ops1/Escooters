@model Escooters.Models.Bike
@{
    ViewData["Title"] = "Edit Bike";
    Layout = "_LayoutAdmin";
}

<h2>Edit Bike</h2>

<form asp-action="EditBike" method="post" enctype="multipart/form-data" class="bg-dark text-white p-4 rounded">
    <input type="hidden" asp-for="BikeId" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <input asp-for="Type" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="PricePerDay" class="form-label"></label>
        <input asp-for="PricePerDay" type="number" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select">
            <option value="Available">Available</option>
            <option value="Rented">Rented</option>
            <option value="Maintenance">Maintenance</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Upload New Image (optional)</label>
        <input type="file" name="ImageFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="mt-2" style="width:100px;border-radius:8px;" />
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="ManageBikes" class="btn btn-secondary ms-2">Cancel</a>
</form>
